<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/v5dp"
        app:cardCornerRadius="@dimen/v2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order ID : "
            android:layout_marginLeft="@dimen/v10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorlightGrey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/v5dp">

            <ImageView
                android:id="@+id/order_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dummy_grocery"
                android:elevation="@dimen/v2dp" />

            <LinearLayout
                android:id="@+id/name_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_image"
                android:gravity="center">

                <TextView
                    android:id="@+id/order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FPT Industrial Cursor 13 NP engine"
                    android:textSize="@dimen/v18sp"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/v15dp"
                    android:layout_marginBottom="@dimen/v15dp"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/order_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2500"
                    android:layout_marginRight="@dimen/v5dp"
                    android:textSize="@dimen/v20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorlightGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Date : 2018-11-27"
                    android:layout_marginLeft="@dimen/v10dp"
                    android:textSize="@dimen/v18sp"/>

                <TextView
                    android:id="@+id/order_price"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="@string/Rs"
                    android:layout_marginRight="@dimen/v10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/v18sp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
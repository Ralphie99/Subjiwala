<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Activities.Dashboard_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/toolbar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hamburger"
                android:layout_width="@dimen/v40dp"
                android:layout_weight="1"
                android:layout_height="@dimen/v40dp"
                android:layout_marginTop="@dimen/v5dp"
                android:layout_marginLeft="@dimen/v10dp"
                android:src="@drawable/ic_hamburger"
                android:elevation="@dimen/v4dp"
                android:layout_gravity="center|top"/>

            <!--<ImageView-->
                <!--android:layout_width="@dimen/v70dp"-->
                <!--android:layout_height="@dimen/v70dp"-->
                <!--android:src="@drawable/grocery_1"-->
                <!--android:layout_weight="0"/>-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_weight="3"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Subjiwala"-->
                <!--android:textColor="@color/colorPrimary"-->
                <!--android:textSize="@dimen/v50sp"-->
                <!--android:textStyle="bold" />-->

            <ImageView
                android:layout_width="256dp"
                android:layout_height="54dp"
                android:layout_weight="5"
                android:src="@drawable/logo1"
                android:paddingTop="@dimen/v5dp"
                android:paddingBottom="@dimen/v5dp"
                android:background="@drawable/elliptical_bg_on_side"
                android:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar_text"
            android:layout_marginLeft="@dimen/v5dp"
            android:layout_marginRight="@dimen/v5dp"
            android:layout_marginTop="@dimen/v15dp"
            app:cardCornerRadius="@dimen/v10dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/v10dp"
                        android:layout_marginRight="@dimen/v10dp"
                        android:layout_marginTop="@dimen/v10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/v10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/v120dp"
                                android:layout_height="@dimen/v120dp"
                                android:layout_margin="@dimen/v10dp"
                                android:background="@drawable/circle"
                                android:elevation="@dimen/v5dp"
                                android:padding="@dimen/v15dp"
                                android:src="@drawable/shop" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/v5dp"
                                android:text="Shop"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/v20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/offers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/v10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/v120dp"
                                android:layout_height="@dimen/v120dp"
                                android:layout_margin="@dimen/v10dp"
                                android:background="@drawable/circle"
                                android:elevation="@dimen/v5dp"
                                android:padding="@dimen/v10dp"
                                android:src="@drawable/offers" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/v5dp"
                                android:text="Offers"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/v20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coming Soon!"
                                android:textColor="@color/flatRed"
                                android:textSize="@dimen/v15sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/v10dp"
                        android:layout_marginRight="@dimen/v10dp"
                        android:layout_marginTop="@dimen/v10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/my_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/v10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/v120dp"
                                android:layout_height="@dimen/v120dp"
                                android:layout_margin="@dimen/v10dp"
                                android:background="@drawable/circle"
                                android:elevation="@dimen/v5dp"
                                android:padding="@dimen/v10dp"
                                android:src="@drawable/my_cart" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/v5dp"
                                android:text="My Cart"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/v20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/v10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/v120dp"
                                android:layout_height="@dimen/v120dp"
                                android:layout_margin="@dimen/v10dp"
                                android:background="@drawable/circle"
                                android:elevation="@dimen/v5dp"
                                android:padding="@dimen/v15dp"
                                android:src="@drawable/wishlist" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/v5dp"
                                android:text="My WishList"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/v20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coming Soon!"
                                android:textColor="@color/flatRed"
                                android:textSize="@dimen/v15sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/v10dp"
                        android:layout_marginRight="@dimen/v10dp"
                        android:layout_marginTop="@dimen/v10dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/my_orders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/v10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/v120dp"
                                android:layout_height="@dimen/v120dp"
                                android:layout_margin="@dimen/v10dp"
                                android:background="@drawable/circle"
                                android:elevation="@dimen/v5dp"
                                android:padding="@dimen/v15dp"
                                android:src="@drawable/orders" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/v5dp"
                                android:text="My Orders"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/v20sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </ScrollView>

        </android.support.v7.widget.CardView>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/v10dp"/>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFDB66">

        <include layout="@layout/nav_layout" />

        </ScrollView>

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
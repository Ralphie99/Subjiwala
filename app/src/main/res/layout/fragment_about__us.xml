<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/v10dp"
                android:layout_marginBottom="@dimen/v10dp"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/v30dp"
                    android:layout_height="@dimen/v30dp"
                    android:layout_marginLeft="@dimen/v15dp"
                    android:src="@drawable/toolbar_back" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/v50dp"
                    android:layout_marginLeft="@dimen/v10dp"
                    android:layout_marginRight="@dimen/v10dp"
                    android:background="@drawable/elliptical_bg"
                    android:padding="5dp"
                    android:src="@drawable/logo1" />

            </LinearLayout>


            <TextView
                android:id="@+id/text_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/v10dp"
                android:layout_marginRight="@dimen/v10dp"
                android:layout_marginTop="@dimen/v10dp"
                android:gravity="center"
                android:text="Tired of visiting vegetable market bringing and bargaining?"
                android:textSize="@dimen/v15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/v10dp"
                android:text="Follow Us At:"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/v20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/v10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="@dimen/v60dp"
                    android:layout_height="@dimen/v60dp"
                    android:layout_weight="1"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="@dimen/v60dp"
                    android:layout_height="@dimen/v60dp"
                    android:layout_weight="1"
                    android:src="@drawable/instagram" />

                <ImageView
                    android:id="@+id/youtube"
                    android:layout_width="@dimen/v60dp"
                    android:layout_height="@dimen/v60dp"
                    android:layout_weight="1"
                    android:src="@drawable/youtube" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/v20dp"
                android:text="Developed by:"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/v22sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/v10dp"
                app:cardCornerRadius="@dimen/v4dp"
                app:cardElevation="@dimen/v5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/v256dp"
                        android:layout_height="@dimen/v54dp"
                        android:layout_marginTop="@dimen/v10dp"
                        android:background="@drawable/elliptical_bg"
                        android:padding="@dimen/v5dp"
                        android:src="@drawable/devslogo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/v10dp"
                        android:layout_marginRight="@dimen/v10dp"
                        android:layout_marginTop="@dimen/v10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/v10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/v120dp"
                                android:layout_height="@dimen/v120dp"
                                android:layout_margin="@dimen/v10dp"
                                android:padding="@dimen/v5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/vinayak"
                                app:civ_border_color="@color/colorPrimary"
                                app:civ_border_width="@dimen/v2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/v2dp"
                                android:text="Vinayak Dubey"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App/Web Developer"
                                android:textSize="@dimen/v15sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/v10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/v120dp"
                                android:layout_height="@dimen/v120dp"
                                android:layout_margin="@dimen/v10dp"
                                android:padding="@dimen/v5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nikhil"
                                app:civ_border_color="@color/colorPrimary"
                                app:civ_border_width="@dimen/v2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/v2dp"
                                android:text="Nikhil Ahuja"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App Developer"
                                android:textSize="@dimen/v15sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/v10dp"
                        android:layout_marginRight="@dimen/v10dp"
                        android:layout_marginTop="@dimen/v10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/v10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/v120dp"
                                android:layout_height="@dimen/v120dp"
                                android:layout_margin="@dimen/v10dp"
                                android:padding="@dimen/v5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/hritik"
                                app:civ_border_color="@color/colorPrimary"
                                app:civ_border_width="@dimen/v2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/v2dp"
                                android:text="Hritik Dubey"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Web Developer"
                                android:textSize="@dimen/v15sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/v10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/v120dp"
                                android:layout_height="@dimen/v120dp"
                                android:layout_margin="@dimen/v10dp"
                                android:padding="@dimen/v5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/aditi"
                                app:civ_border_color="@color/colorPrimary"
                                app:civ_border_width="@dimen/v2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/v2dp"
                                android:text="Aditi Ninawe"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App Desginer"
                                android:textSize="@dimen/v15sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/v20dp"
                        android:text="Visit Us at :"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/v18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/visit_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/v5dp"
                        android:text="www.thedevelopers.in"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/v18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/v10dp"
                        android:text="Contact Us at :"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/v18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/v5dp"
                        android:layout_marginBottom="@dimen/v10dp"
                        android:text="thedevelopers96@gmail.com"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/v18sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
